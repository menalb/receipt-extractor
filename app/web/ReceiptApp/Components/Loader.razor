@if (Visible)
{
    <article class="text-center" role="alert" aria-busy="true">
        <div class="lds-ellipsis" aria-hidden="true"><div></div><div></div><div></div><div></div></div>
        @if (ShowText)
        {
            <div>
                <em>@(string.IsNullOrEmpty(Text) ? "Loading " + LoadingDetail : Text) ... </em>
            </div>
        }
    </article>
}
@code {
    [Parameter] public string LoadingDetail { get; set; } = "";
    [Parameter] public string Text { get; set; } = "";
    [Parameter] public bool ShowText { get; set; } = true;
    [Parameter] public bool Visible { get; set; } = true;
}